{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "clientTransactionId": {
      "type": "string",
      "pattern": "^[0-9]{9}$",
      "description": "A unique identifier for the client transaction"
    },
    "transactionType": {
      "type": "string",
      "enum": ["AdvancePayment-Commit"],
      "description": "The type of transaction"
    },
    "account": {
      "type": "string",
      "pattern": "^[0-9]{9}$",
      "description": "The account number associated with the transaction"
    },
    "creditCardAccount": {
      "type": "string",
      "pattern": "^[0-9]{16}$",
      "description": "The credit card account number"
    },
    "amount": {
      "type": "number",
      "minimum": 0,
      "description": "The amount of the transaction"
    },
    "valueDate": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "The value date of the transaction in the format YYYY-MM-DD"
    },
    "creditCardAccountNo": {
      "type": "string",
      "pattern": "^[0-9]{16}$",
      "description": "The credit card account number (duplicated field)"
    },
    "processedAt": {
      "type": "string",
      "pattern": "^[0-9]{8}$",
      "description": "The date when the transaction was processed in the format YYYYMMDD"
    },
    "currency": {
      "type": "string",
      "description": "The currency of the transaction"
    },
    "channel": {
      "type": "string",

      "description": "The channel through which the transaction was made"
    },
    "netUsername": {
      "type": "string",
      "description": "The username of the online banking user"
    }
  },
  "required": [
    "clientTransactionId",
    "transactionType",
    "account",
    "creditCardAccount",
    "amount",
    "valueDate",
    "creditCardAccountNo",
    "processedAt",
    "currency",
    "channel",
    "netUsername"
  ],
  "additionalProperties": false
}
